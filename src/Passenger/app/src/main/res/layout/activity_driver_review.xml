<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
      tools:context="com.ridewithme.passenger.DriverReview"
    android:id="@+id/Fee">

    <TextView
        android:text="Driver Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewDriverReview"
        android:textSize="30dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you satisfied?"
        android:id="@+id/textView3"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmitReview"
        android:background="@android:color/holo_blue_bright"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/TextViewDriverReview"
        android:layout_alignStart="@+id/TextViewDriverReview"
        android:layout_alignRight="@+id/TextViewDriverReview"
        android:layout_alignEnd="@+id/TextViewDriverReview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fee:RMB "
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_above="@+id/TextViewDriverReview"
        android:layout_marginBottom="57dp"
        android:layout_alignLeft="@+id/TextViewDriverReview"
        android:layout_alignStart="@+id/TextViewDriverReview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"

        android:id="@+id/textViewFeeAmount"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView" />


</RelativeLayout>
