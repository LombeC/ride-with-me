<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ridewithme.passenger.Update_Profile">


    <TextView
        android:id="@+id/registration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updateProfileLabel"
        android:layout_gravity="center"
        style="@style/FullscreenTheme"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/register_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_below="@+id/registration_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp">

    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateProfile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/holo_blue_bright"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/btnUpdatePicture"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Picture"
        android:background="@android:color/holo_blue_bright"
        android:layout_alignBaseline="@+id/btnUpdateProfile"
        android:layout_alignBottom="@+id/btnUpdateProfile"
        android:layout_toRightOf="@+id/register_buttons" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/EditTextUpdateName"
        android:layout_below="@+id/register_buttons"
        android:layout_toRightOf="@+id/register_buttons"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EditTextUpdatePassword"
        android:layout_below="@+id/EditTextUpdateName"
        android:layout_alignRight="@+id/EditTextUpdateName"
        android:layout_alignEnd="@+id/EditTextUpdateName"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/register_buttons"
        android:layout_alignEnd="@+id/register_buttons" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/EditTextUpdatePhoneNumber"
        android:layout_below="@+id/EditTextUpdatePassword"
        android:hint="Phone Number"
        android:layout_alignRight="@+id/EditTextUpdatePassword"
        android:layout_alignEnd="@+id/EditTextUpdatePassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/EditTextUpdateAddress"
        android:layout_below="@+id/EditTextUpdatePhoneNumber"
        android:layout_toRightOf="@+id/editText6"
        android:hint="Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextUpdateCreditCard"
        android:layout_below="@+id/EditTextUpdateAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/EditTextUpdateAddress"
        android:layout_alignEnd="@+id/EditTextUpdateAddress"
        android:hint="Credit Card" />

</RelativeLayout>
